<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.xdschallenge">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/xds"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/xds"
        android:supportsRtl="true"
        android:theme="@style/Theme.Xdschallenge">
        <activity android:name=".ui.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".ui.choiceflavor.ChoiceActivity"/>

        <activity android:name=".ui.detail.DetailActivity"/>

        <activity android:name=".ui.success.SuccessActivity"/>

    </application>

</manifest>